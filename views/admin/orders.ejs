<%- include('../partials/header') %>
  <link rel="stylesheet" href="/css/style.css">

<div class="container">
  <h3>Orders</h3>
  <div class="form">
    <table class="table">
      <thead><tr><th>Order ID</th><th>User</th><th>Items</th><th>Status</th><th>Action</th></tr></thead>
      <tbody>
        <% orders.forEach(o => { %>
          <tr>
            <td><%= o._id %></td>
            <td><%= o.userEmail || 'â€”' %></td>
            <td>
              <% o.items.forEach(it => { %>
                <div><%= it.name %> x <%= it.qty %></div>
              <% }) %>
            </td>
            <td><%= o.status %></td>
            <td>
              <form method="POST" action="/admin/orders/<%= o._id %>/update">
                <select name="status">
                  <option value="Pending" <%= o.status==='Pending'?'selected':'' %>>Pending</option>
                  <option value="Shipped" <%= o.status==='Shipped'?'selected':'' %>>Shipped</option>
                  <option value="Delivered" <%= o.status==='Delivered'?'selected':'' %>>Delivered</option>
                </select>
                <button class="btn btn-primary" style="margin-left:8px;">Update</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
<%- include('../partials/footer') %>
